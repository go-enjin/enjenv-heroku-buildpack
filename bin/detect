#!/bin/bash

BUILD_DIR="$1"

if [ -n "${BUILD_DIR}" ]
then
    if [ -d "${BUILD_DIR}" ]
    then
        if [ -f "${BUILD_DIR}/Enjin.mk" -a -f "${BUILD_DIR}/Slugfile" ]
        then
            echo "enjin-slug"
            exit 0
        elif [ -f "${BUILD_DIR}/Debian.mk" -a -d "${BUILD_DIR}/debian" -a -f "${BUILD_DIR}/Procfile" ]
        then
            echo "apt-package"
            exit 0
        fi
    fi
fi

exit 1